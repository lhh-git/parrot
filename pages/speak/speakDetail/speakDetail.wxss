/* pages/speakDetail/speakDetail.wxss */
/* 上半部分 */
.detail_top{
    position: relative;
}
.detail_top image{
    width: 100%;
    height:827rpx;
}
.detail_story{
    width: 100%;
    height:827rpx;
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
}
.detail_story_name{
    margin-top: 51rpx;
    margin-left: 250rpx;
    font-size: 45rpx;
    color:#4E4E4E;
}
.detail_story_from{
   margin-left: 281rpx;
   margin-top: 31rpx;
   font-size: 30rpx;
   color: #4E4E4E;
}
.detail_story_from .span {
    color: #AEAEAE;
    display: inline-block;
    margin-left: 6rpx;
}
.detail_story button {
	position: absolute;
	width: 228rpx;
    height: 90rpx;
	left: 263rpx;
	top: 220rpx;
	background: red;
	opacity: 0;
}
.detail_story image{
    width: 228rpx;
    height: 90rpx;
    margin-left: 263rpx;
    margin-top: 68rpx;
}
.detail_story_info{
    width: 692rpx;
    height: 419rpx;
    white-space: pre-wrap;
    margin-top: 76rpx;
    font-size: 35rpx;
    color: #4E4E4E;
    line-height: 56rpx;
    padding-left: 28rpx;
    overflow: hidden;
    overflow-y:auto; 
    letter-spacing:140;
    text-align: left;
}
.detail_story_mark{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background: -webkit-linear-gradient(rgba(255, 255, 255, .0),rgba(255, 255, 255, .8));
}

/* 下半部分 */
.detail_bottom{
	overflow: hidden;
	width: 100%;
    margin-top: 29rpx;
}
/* 前三 */
.detail_bottom .sort_banner {
	height: 55rpx;
}
.detail_bottom .sort_banner image:nth-child(1) {
	margin-left: 283rpx;
	width: 185rpx;
	height: 55rpx;
}
.detail_bottom .sort_banner image:nth-child(2) {
	margin-left: 17rpx;
	margin-top: -20rpx;
	width: 35rpx;
	height: 34rpx;
}
.detail_bottom .sort_list {
	display: flex;
	margin: 0 83rpx 0 87rpx; 
	height: 207rpx;
}
.detail_bottom .sort_list .sort_alone {
	position: relative;
	text-align: center;
	height: 100%;
}
.detail_bottom .sort_list .sort_alone:nth-child(1) {
	width: 147rpx;
}
.detail_bottom .sort_list .sort_alone_2 .photo {
	margin-top: 44rpx;
	width: 105rpx;
	height: 105rpx;
	border-radius: 50%;
}
.detail_bottom .sort_list .sort_alone_2 .sort_photo {
	position: absolute;
	top: 126rpx;
	left: 0;
	width: 147rpx;
	height: 31rpx;
}
.detail_bottom .sort_list .sort_alone_2 .title {
	position: absolute;
	bottom: 0;
	left: 50%;
	transform: translateX(-50%);
	width: 100%;
	font-size: 30rpx;
	color: #889395;
}

.detail_bottom .sort_list .sort_alone:nth-child(2) {
	margin: 0 46rpx;
	width: 194rpx;
	height: 100%;
}
.detail_bottom .sort_list .sort_alone:nth-child(2) .photo {
	margin-top: 31rpx;
	width: 126rpx;
	height: 126rpx;
	border-radius: 50%;
}
.detail_bottom .sort_list .sort_alone:nth-child(2) .sort_photo {
	position: absolute;
	top: 126rpx;
	left: 0;
	width: 194rpx;
	height: 41rpx;
}
.detail_bottom .sort_list .sort_alone:nth-child(2) .title {
	position: absolute;
	bottom: 0;
	left: 50%;
	transform: translateX(-50%);
	width: 100%;
	font-size: 30rpx;
	color: #F8740A;
}
.detail_bottom .sort_list .sort_alone:nth-child(3) {
	width: 147rpx;
	height: 100%;
}
.detail_bottom .sort_list .sort_alone:nth-child(3) .title {
	color: #C37641;
}


/* 列表 */
.list{
    margin-left: 40rpx;
}
.bottom_list{
    padding-top: 52rpx;
}
.bottom_list_photo{
    display: inline-block;
    width: 73rpx;
    height: 73rpx;
    text-align: center;
    position: relative
}
.bottom_list_photo image{
    width: 73rpx;
    height: 73rpx;
    border-radius: 50%;
}
.bottom_list_photo .icon{
    position: absolute;
    height: 23rpx;
    min-width: 23rpx;
    border-radius: 50%;
    background: #FFAA04;
    bottom: -5rpx;
    left: 26rpx;
    font-size: 23rpx;
    text-align: center;
    line-height: 23rpx;
    color: #FFFFFF;
}
.bottom_list_photo .icon_sel {
	position: absolute;
    height: 23rpx;
    border-radius: 12rpx;
    background: #FFAA04;
    bottom: -5rpx;
    left: 50%;
	transform: translateX(-50%);
	padding: 0 7rpx;
    font-size: 23rpx;
    text-align: center;
    line-height: 23rpx;
    color: #FFFFFF;
}

.bottom_list_msg{
    display: inline-block;
    vertical-align: top;
    font-size: 25rpx;
    margin-left: 13rpx;
    color:#8E8D8D;
}
.bottom_list_msg .icon{
    display: inline-block;
    margin-left: 20rpx;
    margin-right: 20rpx;
}
.bottom_list_msg .opus{
    display: inline-block;
    color:#585858;
}
.list_msg_border {
    padding-bottom: 36rpx; 
    border-bottom: 1rpx solid #C9C9C9;
}
.list_msg_bottom {
    display: inline-block;
    margin-top: 20rpx;
}
.list_msg_bottom .like{
    width: 21rpx;
    height: 20rpx;
}
.list_msg_bottom .money{
    display: inline-block;
    margin-left: 8rpx;
}
.ml{
    margin-left: 33rpx;
}

.list_msg_time{
    display: inline-block;
    padding-left: 155rpx;
}

/* 加载更多 */
.bottom_more{
    text-align: center;
    color: #8E8D8D;
    font-size: 23rpx;
    margin-top: 54rpx;
}
.bottom_more image{
    width: 40rpx;
    height: 27rpx;
    margin-top: 25rpx;
	margin-bottom: 27rpx;
}