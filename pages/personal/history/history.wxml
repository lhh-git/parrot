<view class="contain">
	<view class="menu">
		<view wx:for="{{menu}}"
			wx:key="{{index}}"
			class="{{menu_id == index ? 'item active' : 'item'}}"
			data-index="{{index}}"
			bindtap='handleToggleMenu'
		>
			{{item}}
			<view wx:if="{{menu_id == index}}" class="border_bottom"></view>
		</view>
	</view>

	<view class="section">
