<view>
	<swiper
		indicator-dots="{{indicatorDots}}"
		autoplay="{{autoplay}}"
		interval="{{interval}}"
		duration="{{duration}}"
		circular="{{circular}}"
		indicator-color="background:rgba(255,255,255,.3)"
		indicator-active-color="#fff"
		class="swiper_box"
	>
		<block wx:for="{{imgUrls}}" wx:key="{{index}}">
			<swiper-item>
				<image src="{{item.product_images}}" class="slide-image" width="355" height="150" />
			</swiper-item>
		</block>
	</swiper>
    <view class="vgd_money">
        <view class="item">{{detail.product_price}}
            <view class="no_money">{{detail.product_original_price}}</view>
            </view>
        <view class="item">运费：包邮</view>
    </view>
    <view class="vgd_name">{{detail.product_name}}</view>
    <view class="vgd_gift">赠品：鹦鹉听书畅听权限{{detail.MemberCard.membercard_days}}日</view>
    <view class="vgd_discount">优惠：折上反佣金</view>
    <view class="vgd_detail">
        <view class="vgd_h1">- 商品详情 -</view>
        <view class="vgd_img">
            <image src="{{detail.ProductImg[0].product_images}}"></image>
        </view>
    </view>
    <view class="vgd_button">
        <form bindsubmit="formSubmit" report-submit='true' >
            <button class="vgd_purchase" 
				form-type="submit"
                data-id="{{detail.membercard_id}}"
				bindtap='handleOpenVipOrderInfo'
			>
				确认购买
			</button>
        </form>
    </view>
</view>