.swiper_box {
	width: 100%;
	height: 853rpx;
}
.swiper_box .slide-image {
	width: 100%;
	height: 853rpx;
}
.vgd_money{
    width: 100%;
    height: 107rpx;
    background: #F86442;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-weight:bold;
    color:rgba(255,255,255,1);
}
.vgd_money .item:first-child{
    margin-left: 31rpx;
    font-size:51rpx;
}
.vgd_money .no_money{
    font-size:36rpx;
    display: inline;
    color:rgba(255,255,255,.5);
    position: relative;
}
.vgd_money .no_money::before{
    content: "";
    display: block;
    position: absolute;
    top: 50%;
    left: 0;
    width:147rpx;
    height: 2rpx; 
    background: rgba(255,255,255,0.5);
}
.vgd_money .item:last-child{
    margin-right: 33rpx;
    font-size:26rpx;
}
.vgd_name{
    margin-left: 30rpx;
    margin-right: 31rpx;
    border-bottom:1rpx solid #EEEEEB;
    padding-top: 19rpx;
    padding-bottom: 22rpx;
    font-size:40rpx;
    font-weight:bold;
    color:rgba(78,78,78,1);
}
.vgd_gift{
    margin-left: 30rpx;
    padding-top: 19rpx;
    font-size:30rpx;
    font-weight:400;
    color:rgba(78,78,78,1);
}
.vgd_discount{
    margin-left: 30rpx;
    padding-top: 19rpx;
    font-size:30rpx;
    font-weight:400;
    color:rgba(78,78,78,1);
    padding-bottom: 45rpx;
}
.vgd_detail{
    border-top:19rpx solid #F3F3F3; 
    padding-bottom: 101rpx;
}
.vgd_h1 {
    font-size:24rpx;
    color:rgba(78,78,78,1);
    text-align: center;
    margin-top: 24rpx;
}
.vgd_img {
   display:flex;
    flex-direction:column;
    align-items:center;
    margin-top: 48rpx;
}
.vgd_img image {
    width: 691rpx;
    height: 356rpx;
    padding-top: 11rpx;
}
.vgd_button {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background: #fff;
    border-top:1rpx solid #EEEEEB;
    display: flex;
    align-items: center;
    justify-content: center;
}
.vgd_purchase {
    width: 602rpx;
    height: 85rpx;
    background: #F86442;
    border-radius:10rpx;
    color:#fff;
    text-align: center;
    line-height: 85rpx;
    font-size:30rpx;
    font-weight:bold;
}